@model List<Course>
@{
    ViewData["Title"] = "Index";
    var Courses = Model;
}

<h1 class="mt-4">Courses</h1>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>CourseId</th>
            <th>Name</th>
            <th>Degree</th>
            <th>MinDegree</th>
            <th>Department</th>
            <th colspan="2" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.Name</td>
                <td>@course.Degree</td>
                <td>@course.MinDegree</td>
                <td>@course.Department.Name</td>
                <td class="text-center">
                    <a asp-controller="Course" asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> View
                    </a>
                </td>
                <td class="text-center">
                    <a asp-controller="Course" asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="NewCourse" asp-controller="Course" class="btn btn-success btn-sm">New Course</a>


