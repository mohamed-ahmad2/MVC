@model List<ProjectMVC1.Models.Instructore>

@{
    ViewBag.Title = "Instructors List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Instructors</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Instructor Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Address</th>
            <th>Salary</th>
            <th>Department Name</th>
            <th>Course Name</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.InstructoreId</td>
                <td>@instructor.Name</td>
                <td>
                    <img src="~/images/@instructor.Image" alt="@instructor.Image" height="100" width="100"/>
                </td>
                <td>@instructor.Address</td>
                <td>@instructor.Salary</td>
                <td>@instructor.Department?.Name</td>
                <td>@instructor.Course?.Name</td>

                <td>
                    <a href="~/Instructore/Details/@instructor.InstructoreId">Details @instructor.Name</a>
                </td>
            </tr>
        }
    </tbody>
</table>
