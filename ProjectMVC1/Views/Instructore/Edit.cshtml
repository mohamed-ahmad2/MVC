@model InstrctrWithDprtmntViewModel

@{
    ViewData["Title"] = "Edit";
    SelectList deptOptions = ViewBag.DeptList;
    SelectList courseOptions = ViewBag.CourseList;
}

<h1>Edit Instructor</h1>

<form asp-action="SavaChanges" asp-controller="Instructore" method="post" asp-route-id="@Model.InstructoreId" enctype="multipart/form-data">
    <input type="hidden" asp-for="InstructoreId" />

    <div class="form-group">
        <label asp-for="Name" ></label>
        <input type="text"  class="form-control" asp-for="Name"/>
    </div>
    <br />

    <div class="form-group">
        <label>Current Image:</label><br />
        <img src="~/images/@Model.Image" alt="Current Image" width="150" height="150" />
    </div>

    <div class="form-group">
        <label asp-for="ImageFile"></label>
        <input type="file" asp-for="ImageFile" class="form-control" />
    </div>

    
    <input type="hidden" name="OldImage" value="@Model.Image" />

    <br />

    <div class="form-group">
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
    </div><br />

    <div class="form-group">
        <label asp-for="Salary"></label>
        <input type="number" asp-for="Salary" class="form-control" />
    </div><br />

    <div class="form-group">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" class="form-control" asp-items="deptOptions"></select>

    </div><br />

    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select asp-for="CourseId" class="form-control" asp-items="courseOptions"></select>
    </div><br/>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
