@model InstrctrWithDprtmntViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Instructor</h1>

<form asp-action="SavaChanges" asp-controller="Instructore" method="post" asp-route-id="@Model.InstructoreId" enctype="multipart/form-data">
    <input type="hidden" name="InstructoreId" value="@Model.InstructoreId" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" name="Name" id="Name" class="form-control" value="@Model.Name" />
    </div>
    <br />

    <div class="form-group">
        <label>Current Image:</label><br />
        <img src="~/images/@Model.Image" alt="Current Image" width="150" height="150" />
    </div>

    <div class="form-group">
        <label for="ImageFile">Upload New Image</label>
        <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
    </div>

    
    <input type="hidden" name="OldImage" value="@Model.Image" />

    <br />

    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" name="Address" id="Address" class="form-control" value="@Model.Address" />
    </div><br />

    <div class="form-group">
        <label for="Salary">Salary</label>
        <input type="number" name="Salary" id="Salary" class="form-control" value="@Model.Salary" />
    </div><br />

    <div class="form-group">
        <label>Department</label>
        <select name="DepartmentId" class="form-control">
            @foreach (var item in Model.Departments)
        {
            @if (Model.DepartmentId == @item.DepartmentId)
            {
                <option value="@item.DepartmentId" selected>@item.Name</option>
            }
            else
            {
                <option value="@item.DepartmentId">@item.Name</option>
            }
        }
        </select>
    </div><br />

    <div class="form-group">
        <label>Course</label>
        <select name="CourseId" class="form-control">
        @foreach (var item in Model.Courses)
        {
            @if (Model.CourseId == @item.CourseId)
            {
                    <option value="@item.CourseId" selected>@item.Name</option>
            }
            else
            {
                <option value="@item.CourseId">@item.Name</option>
            }
        }
        </select>
    </div><br/>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
