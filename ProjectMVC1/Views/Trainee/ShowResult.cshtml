@model CrsResult
@{
    ViewData["Title"] = "Show Result";
}

<h1 class="text-center mb-4">📊 Course Result Details</h1>

<div class="card shadow p-4 mb-4">
    <div class="row">
        <!-- Trainee Info -->
        <div class="col-md-6 border-end">
            <h4>👨‍🎓 Trainee Info</h4>
            <img src="~/images/@Model.Trainee?.Image" alt="Trainee Image" class="img-thumbnail mb-3" style="width:150px;height:150px;" />
            <p><strong>Name:</strong> @Model.Trainee?.Name</p>
            <p><strong>Address:</strong> @Model.Trainee?.Address</p>
            <p><strong>Grade:</strong> @Model.Trainee?.Grade</p>
            <p><strong>Department:</strong> @Model.Trainee?.Department?.Name</p>
        </div>

        <!-- Course Info -->
        <div class="col-md-6">
            <h4>📘 Course Info</h4>
            <p><strong>Name:</strong> @Model.Course?.Name</p>
            <p><strong>Max Degree:</strong> @Model.Course?.Degree</p>
            <p><strong>Min Degree:</strong> @Model.Course?.MinDegree</p>
            <p><strong>Department:</strong> @Model.Course?.Department?.Name</p>
        </div>
    </div>

    <!-- Result -->
    <div class="alert alert-@(Model.Degree >= Model.Course?.MinDegree ? "success" : "danger") mt-4 text-center fs-5">
        <strong>Result:</strong> @Model.Degree
        (@(Model.Degree >= Model.Course?.MinDegree ? "Pass ✅" : "Fail ❌"))
    </div>

    <div class="text-center mt-3">
        <a asp-controller="Trainee" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Trainee List
        </a>
    </div>
</div>
